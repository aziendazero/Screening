                                                                      readOnly="#{bindings.Completo.inputValue=='1'?true:false}"
                                                                      maximumLength="#{bindings.Noteconcl.hints.precision}"
                                                                      shortDesc="#{bindings.Noteconcl.hints.tooltip}"
                                                                      id="it1">
